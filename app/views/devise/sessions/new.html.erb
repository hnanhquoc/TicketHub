<%= stylesheet_link_tag "signin" %>

<div class="container">
	<div class="card card-container">
		<!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
		<img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
		<p id="profile-name" class="profile-name-card"></p>
		<h2 style="text-align: center;">Log In</h2>

		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		<span id="reauth-email" class="reauth-email"></span>
		<%= f.input :email, required: false, autofocus: true, class: 'form-control', :input_html => {
			:id => "inputEmail",
			:placeholder => "Email address"
		} %>
		<%= f.input :password, required: false, class: 'form-control', :input_html => {
			:id => 'inputPassword',
			:placeholder => 'Password'
		} %>
		<%= flash_messages %>
		<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
		<%= f.button :submit, "Log in", class: 'btn btn-lg btn-primary btn-block btn-signin' %>
		<%= render "devise/shared/links" %>
		<% end %><!-- /form -->
	</div><!-- /card-container -->
</div><!-- /container -->